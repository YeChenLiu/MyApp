<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 布局 宽 高 -->
    <style name="Lmw">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Lwm">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="Lmm">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="Lww">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Lmw_gray">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/gray</item>
    </style>

    <style name="Lwm_gray">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/gray</item>
    </style>

    <style name="Lmm_gray">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/gray</item>
    </style>

    <style name="Lww_gray">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/gray</item>
    </style>

    <!-- textview 常见状态   宽度 颜色 大小 -->
    <style name="tv_wrap_grayDark_normal" parent="Lww">
        <item name="android:textSize">@dimen/s_normal</item>
        <item name="android:textColor">@color/grayDark</item>
    </style>

    <style name="tv_wrap_grayDark_small" parent="Lww">
        <item name="android:textSize">@dimen/s_small</item>
        <item name="android:textColor">@color/grayDark</item>
    </style>

    <style name="tv_wrap_black_small" parent="Lww">
        <item name="android:textSize">@dimen/s_small</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="tv_wrap_black_normal" parent="Lww">
        <item name="android:textSize">@dimen/s_normal</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="tv_wrap_white_normal" parent="Lww">
        <item name="android:textSize">@dimen/s_normal</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="tv_wrap_black_big" parent="Lww">
        <item name="android:textSize">@dimen/s_big</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="tv_match_black_normal" parent="Lmw">
        <item name="android:textSize">@dimen/s_normal</item>
        <item name="android:textColor">@color/black</item>
    </style>


    <style name="tv_wrap_default_big" parent="Lww">
        <item name="android:textSize">@dimen/s_big</item>
    </style>

    <style name="tv_wrap_default_bigger" parent="Lww">
        <item name="android:textSize">@dimen/s_bigger</item>
    </style>

    <style name="tv_wrap_white_big_btn" parent="Lww">
        <item name="android:textSize">@dimen/s_big</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="tv_match_default_big" parent="Lmw">
        <item name="android:textSize">@dimen/s_big</item>
    </style>

    <style name="tv_match_default_normal" parent="Lmw">
        <item name="android:textSize">@dimen/s_normal</item>
    </style>
    <!-- 竖线 -->
    <style name="view_vertical">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/gray</item>
    </style>
    <!-- 横线 -->
    <style name="view_horizonl">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/gray</item>
    </style>

</resources>